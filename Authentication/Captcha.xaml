<Window x:Class="Authentication.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authentication"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CAPTCHA" Height="450" Width="800" MaxHeight="450" MinHeight="450" MaxWidth="800" MinWidth="800" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите текст с картинки" FontSize="32" FontWeight="SemiBold" TextAlignment="Center"/>
            <Canvas x:Name="CvField" Width="450" Height="200"/>
            <TextBox x:Name="tbInputField" FontSize="24" MaxWidth="350" Height="34" TextAlignment="Center" MaxLength="50" Margin="5"/>
            <Button x:Name="BtnGo" Content="Отправить" Width="120" Height="32" Margin="5" FontSize="18" Click="BtnGo_Click"/>
        </StackPanel>
    </Grid>
</Window>
