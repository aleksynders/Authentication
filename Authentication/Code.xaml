<Window x:Class="Authentication.Code"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authentication"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Проверочный код" Height="450" Width="800" MaxHeight="450" MinHeight="450" MaxWidth="800" MinWidth="800" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите код" FontSize="32" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbCode" FontSize="24" TextAlignment="Center"  Width="120" Height="32" MaxLength="5" HorizontalAlignment="Center" TextChanged="tbCode_TextChanged"/>
            <TextBlock x:Name="tbRemainingTime" HorizontalAlignment="Center" Margin="5" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
